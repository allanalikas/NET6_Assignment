
<MudContainer>
    <MudPaper MaxWidth="40rem" MaxHeight="50vh" class="mx-auto overflow-scroll mt-4" Elevation="0">
        <MudList Class="d-flex align-center flex-column">
            @foreach (var alarm in passedAlarms)
            {
                <MudListItem>
                    <MudPaper Class="d-flex align-center justify-space-between" Elevation="4">
                        <MudAlert Severity="Severity.Warning"> </MudAlert>
                        <MudText Class="ml-2">The alarm you set for @alarm.time has passed</MudText>
                        <MudIconButton @onclick="() => RemoveAlert(alarm)" Icon="@Icons.Material.Filled.Close" />
                    </MudPaper>
                </MudListItem>
            }
        </MudList>    
    </MudPaper>
        
    <MudPaper Class="d-flex justify-center" Elevation="0">
        <MudPaper Class="d-flex clock" Elevation="0">
            @currentTime
        </MudPaper>
    </MudPaper>
    <MudPaper Elevation="0" MaxWidth="16rem" class="ma-auto">
        <MudTimePicker PickerVariant="PickerVariant.Dialog" Label="24 hours" Editable="true" @bind-Time="newAlarmTime" />
    </MudPaper>
    <MudPaper Class="d-flex justify-center pt-2 gap-2" Elevation="0">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="AddAlarm" >Add Alarm</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="ClearAlarms">Clear Alarms</MudButton>
    </MudPaper>
    @if(alarms.Count != 0) {
        <MudPaper MaxWidth="20rem" MaxHeight="50vh" class="mx-auto overflow-scroll mt-4">

            <MudList Clickable="true" Class="d-flex align-center flex-column ml-2">
                @foreach (var alarm in alarms)
                {
                    <MudListItem>
                        <MudPaper Class="d-flex align-center justify-space-between" Elevation="0">
                            <MudText Class="pl-4">@alarm.time</MudText>
                            <MudIconButton @onclick="() => RemoveAlarm(alarm)" Icon="@Icons.Material.Filled.Delete" />
                        </MudPaper>
                    </MudListItem>
                }
            </MudList>
        </MudPaper>
    }
</MudContainer>